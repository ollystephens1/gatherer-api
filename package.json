{
  "name": "seed-api",
  "version": "1.0.0",
  "description": "ClearPeaks Node.js API seed",
  "private": true,
  "scripts": {
    "build:dev": "NODE_ENV=development webpack --config ./config/webpack.config.js --watch",
    "build:prod": "npm run clean && NODE_ENV=production webpack --config ./config/webpack.config.js",
    "clean": "rimraf dist/*",
    "eslint": "./node_modules/.bin/eslint ./src",
    "precommit": "npm run eslint",
    "start": "npm-run-all --parallel watch:server build:dev",
    "start:prod": "NODE_ENV=production node dist/server.bundle.js",
    "test": "npm run build:prod && NODE_ENV=production  mocha --timeout 10000",
    "watch:server": "nodemon ./dist/server.bundle.js --watch ./dist"
  },
  "dependencies": {
    "adaro": "~1.0.4",
    "body-parser": "~1.18.2",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "helmet": "^3.12.0",
    "morgan": "~1.9.0",
    "node-sass-middleware": "0.9.8",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "dotenv": "^5.0.0",
    "eslint": "^4.18.2",
    "husky": "^0.14.3",
    "mocha": "^5.0.4",
    "nodemon": "^1.14.12",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "webpack": "^3.11.0",
    "webpack-cli": "^2.0.11",
    "webpack-node-externals": "^1.6.0"
  }
}
