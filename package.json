{
  "name": "seed-api",
  "version": "1.0.0",
  "description": "ClearPeaks Node.js API seed",
  "private": true,
  "scripts": {
    "build:dev": "cross-env NODE_ENV=development webpack --config ./config/webpack.config.js --watch",
    "build:prod": "npm run clean && cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "clean": "rimraf dist/*",
    "eslint": "./node_modules/.bin/eslint ./src",
    "precommit": "npm run eslint",
    "start": "npm-run-all --parallel watch:server build:dev",
    "start:prod": "cross-env NODE_ENV=production node dist/server.bundle.js",
    "test": "npm run build:prod && cross-env NODE_ENV=production  mocha --timeout 10000",
    "watch:server": "nodemon ./dist/server.bundle.js --watch ./dist"
  },
  "dependencies": {
    "adaro": "~1.0.4",
    "body-parser": "~1.18.2",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "fs-extra": "^5.0.0",
    "helmet": "^3.12.0",
    "moment": "^2.21.0",
    "morgan": "~1.9.0",
    "node-fetch": "^2.1.2",
    "node-sass-middleware": "0.9.8",
    "pm2": "^2.10.1",
    "response-time": "^2.3.2",
    "serve-favicon": "~2.4.5",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cross-env": "^5.1.4",
    "dotenv": "^5.0.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.4",
    "nodemon": "^1.14.12",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^3.11.0",
    "webpack-cli": "^2.0.11",
    "webpack-node-externals": "^1.6.0"
  }
}
