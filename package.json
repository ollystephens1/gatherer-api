{
	"name": "gatherer-api",
	"version": "1.0.0",
	"description": "Gatherer API",
	"private": true,
	"scripts": {
		"build:dev": "cross-env NODE_ENV=development npm run build:webpack",
		"build:prod": "cross-env NODE_ENV=production npm run build:webpack",
		"build:webpack": "webpack --config ./config/webpack.config.js",
		"eslint": "./node_modules/.bin/eslint ./src",
		"precommit": "npm run eslint",
		"start": "npm run build:dev",
		"start:prod": "cross-env NODE_ENV=production node dist/server.bundle.js",
		"test": "npm run build:prod && cross-env NODE_ENV=production mocha --timeout 10000"
	},
	"dependencies": {
		"body-parser": "~1.18.2",
		"compression": "^1.7.2",
		"config": "^1.30.0",
		"connect-timeout": "^1.9.0",
		"cookie-parser": "^1.4.3",
		"debug": "~2.6.9",
		"express": "~4.15.5",
		"fs-extra": "^5.0.0",
		"helmet": "^3.12.0",
		"http-status": "^1.1.2",
		"lodash": "^4.17.10",
		"memory-cache": "^0.2.0",
		"moment": "^2.21.0",
		"mongoose": "^5.1.7",
		"morgan": "~1.9.0",
		"node-fetch": "^2.1.2",
		"pm2": "^2.10.1",
		"response-time": "^2.3.2",
		"serve-favicon": "~2.4.5",
		"winston": "^2.4.1"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.4",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"chai": "^4.1.2",
		"chai-http": "^3.0.0",
		"cross-env": "^5.1.4",
		"eslint": "^4.18.2",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-import-resolver-webpack": "^0.10.0",
		"eslint-plugin-import": "^2.12.0",
		"husky": "^0.14.3",
		"jsonwebtoken": "^8.3.0",
		"mocha": "^5.0.4",
		"nodemon": "^1.14.12",
		"nodemon-webpack-plugin": "^3.0.1",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"uglifyjs-webpack-plugin": "^1.2.5",
		"webpack": "^3.11.0",
		"webpack-cli": "^2.0.11",
		"webpack-node-externals": "^1.6.0"
	}
